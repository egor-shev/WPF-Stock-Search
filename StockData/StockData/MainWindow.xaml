<Window x:Class="StockData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Label Content="Search Stocks:" Height="23" VerticalAlignment="Top" Margin="21,10,687,0" RenderTransformOrigin="-10.048,-0.217"></Label>
        <TextBox x:Name="textBox1" CharacterCasing="Upper" VerticalAlignment="Top" KeyUp="textBox1_KeyUp" Margin="121,5,526,0" Height="28" RenderTransformOrigin="0.772,0.321" />

        <Label Content="Calculate Factorial:" Height="23" VerticalAlignment="Top" Margin="284,10,389,0" RenderTransformOrigin="-10.048,-0.217"></Label>
        <TextBox PreviewTextInput="PreviewTextInput" x:Name="textBox2" VerticalAlignment="Top" Margin="395,5,77,0" Height="28" RenderTransformOrigin="1.067,0.607" />
        <Button x:Name="calculateButton" Content="Calculate" Margin="720,5,10,386" Click="calculateButton_Click"></Button>

        <DataGrid x:Name="dataGrid1" Margin="0,38,0,0"/>

    </Grid>
</Window>
